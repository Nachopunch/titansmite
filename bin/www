#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('titansmite:server');
var http = require('http');
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '80');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);

var io = require('socket.io')(server);
server.on('error', onError);
server.on('listening', onListening);









var serverPicks =[];

console.log('created serverPicks: '+serverPicks);

io.on('connection', function (socket){

  socket.emit('init', serverPicks);

  socket.on('clientLock', function (data){

    if (data && serverPicks.length < 16){
      io.emit('serverLock', data);
      serverPicks.push(data);
      console.log('client '+socket.id+' has picked '+data);
      console.log('current picks(server): '+serverPicks);
    }
  });

  socket.on('reset', function (){
    serverPicks = [];
    console.log('The picks have been reset(server): '+serverPicks);
    io.emit('init', serverPicks)
  });

  socket.on('undo', function(){
    serverPicks.pop();
    console.log('Last pick was undone, new current picks(server): '+serverPicks);
    io.emit('serverUndo', serverPicks);
  })
});















/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
